sitemap <%= name %> label="<%= homeName %>" {
<% if (structure.length) { -%>
    Frame {
<% structure.forEach(function(floor, index, floors) { -%>
<%   if (floors.length > 1) { -%>
        Group item=<%= floor.name %>
<%   } else { -%>
<%     floor.rooms.forEach(function(room) { -%>
        Group item=<%= room.value %>
<%     }); -%>
<%   } -%>
<% }); -%>
    }
<% } -%>

<% if (devices.length) { -%>
    Frame {
<%   devices.forEach(function(device) { -%>
        Group item=<%= device.pluralValue %>
<%   }); -%>
    }
<% } -%>
}
